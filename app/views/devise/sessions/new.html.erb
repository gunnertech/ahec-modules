<div id="login-form">
  <h2 class="text-center login-title">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="account-wall">
      <% if f.object.errors.any? %>
        <% f.object.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
      <% end %>

      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "login-field-cluster form-control" %>

      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "login-field-cluster form-control" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field form-spacing">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <a href="<%= new_user_registration_path %>" id="sign-up-button" class="btn btn-primary btn-lg" role="button">Sign Up</a>
  <a href="<%= new_user_password_path %>" id="forgot-password-button" class="btn btn-primary btn-lg" role="button">Reset Password</a>

</div>

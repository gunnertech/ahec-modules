<p id="notice"><%= notice %></p>

<h1 class="text-center">Listing Courses</h1>

<table class="courses-table">
  <tbody>
    <% @courses.sort_by { |c| c.title }.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <% if current_user && current_user.admin %>
          <td>&nbsp;| <%= link_to 'Edit', edit_course_path(course) %></td>
          <td>&nbsp;| <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin %>
  <%= link_to 'New Course', new_course_path %>
<% end %>

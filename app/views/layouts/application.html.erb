<!DOCTYPE html>
<html>
  <head>
    <title>CityFeedLive</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= nav_bar fixed: :top, brand: "AHEC Modules", responsive: true do %>
      <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_divider %>
        <%= drop_down "Dropdown" do %>
          <%= menu_item "Menu Item", "/" %>
          <%= menu_item "Menu Item", "/asdf" %>
          <%= menu_item "Menu Item", "/asdfasdf" %>
          <%= menu_item "Menu Item", "/asdfasdfasdf" %>
          <%= menu_item "Menu Item", "/asdfasdfasdfasdf" %>
        <% end %>
      <% end %>
      <%= menu_group pull: :right do %>
        <% if current_user %>
          <%= menu_item "Logout", destroy_user_session_path, method: :delete %>
        <% else %>
          <%= form_for User.new, url: session_path(:user), html: {class: "navbar-form pull-right"} do |f| -%>
            <%= f.text_field :email %> <%= f.password_field :password %> <%= f.submit "Sign In", class: "btn" %> <%= link_to("Register", new_user_registration_path, class: "btn btn-primary") %>
          <% end -%>
        <% end %>
      <% end %>
    <% end %>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>AHEC Modules</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= nav_bar fixed: :top, brand: "AHEC Modules", responsive: true do %>
      <%= menu_group do %>
        <% if current_user %>
          <%= menu_item "Courses", courses_path %>
          <%= menu_divider %>

          <% if current_user.admin %>
            <%= drop_down "Admin Actions" do %>
              <%= menu_item "Course Join Requests", admin_join_requests_path %>
              <%= menu_item "Certificates", admin_certificates_path %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>

      <%= menu_group pull: :right do %>
        <% if current_user %>
          <%= menu_item "Logout", destroy_user_session_path, method: :delete %>
        <% end %>
      <% end %>
    <% end %>
    
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    
    <%= yield %>

    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-73802509-1', 'auto');
      ga('send', 'pageview');

    </script>
  </body>
</html>
